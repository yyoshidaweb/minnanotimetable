<%= form_with url: update_sort_event_stages_path(@event.event_key), method: :patch do %>
  <ul id="stage-list" class="flex flex-col space-y-4">
    <% @stages.each do |stage| %>
      <li data-id="<%= stage.id %>" class="block bg-white shadow-md rounded-lg p-4 border hover:shadow-xl hover:bg-gray-50 transition">
        <%= stage.display_name %>
        <%= hidden_field_tag "stage_ids[]", stage.id %>
      </li>
    <% end %>
  </ul>
  <%= submit_tag "保存して並び替えを終了" %>
<% end %>

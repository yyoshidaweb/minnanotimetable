<%# 成功メッセージ %>
<% if flash[:notice] %>
  <div data-controller="flash"
        class="fixed inset-0 z-1000 flex items-start justify-center pointer-events-none">
    <div class="mx-6">
      <div class="max-w-sm mt-20 mx-auto p-4 text-green-800 text-center
                  bg-green-100/80 backdrop-blur-xs border border-green-50/30 rounded-lg shadow-lg">
        <%= flash[:notice] %>
      </div>
    </div>
  </div>
<% end %>
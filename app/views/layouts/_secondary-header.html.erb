<%# セカンドヘッダー共通テンプレート %>
<% if defined?(@page_title) && @page_title.present? %>
  <header class="fixed top-8 left-0 w-full h-8 bg-white border-b border-gray-100 z-50 flex items-center">
    <div class="w-full mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center relative">
      <%# 戻るボタン%>
      <%= link_to request.referer || root_path, class: "cursor-pointer" do %>
        <span class="material-symbols-outlined text-sm text-gray-800">
          arrow_back
        </span>
      <% end %>
      <h1 class="text-sm text-gray-800 absolute left-1/2 -translate-x-1/2"><%= @page_title %></h1>
    </div>
  </header>
<% end %>
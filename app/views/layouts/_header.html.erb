<%# 固定ヘッダー (position: fixed) %>
<header class="fixed top-0 left-0 w-full h-8 bg-white border-b border-gray-100 z-170 flex items-center">
  <div class="w-full mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center">
    <%# 左側: タイトル %>
    <%= link_to "みんなのタイムテーブル", root_path, class: "inline-flex items-center text-sm font-bold text-gray-800 hover:text-gray-700 transition" %>
    <%# 中央: バッジ（ステージングのみ） %>
    <% if Rails.env.staging? %>
      <span class="text-xs bg-red-600 text-white px-2 py-0.5 rounded">
        ステージング環境
      </span>
    <% end %>
    <% if user_signed_in? %>
      <%# プロフィールリンク（ログイン時） %>
      <%= link_to profile_path,
                      class: "flex justify-center items-center text-gray-800" do %>
        <span class="material-symbols-outlined">person</span>
      <% end %>
    <% else %>
      <%# トップページリンク（未ログイン時） %>
      <%= link_to root_path,
                      class: "flex justify-center items-center text-gray-800" do %>
        <span class="material-symbols-outlined">login</span>
      <% end %>
    <% end %>
  </div>
</header>
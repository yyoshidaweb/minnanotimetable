<div class="max-w-md mx-auto mt-10 p-6 bg-white shadow-md rounded-lg">
  <%# 成功メッセージまたはエラーメッセージ %>
  <% flash.each do |key, message| %>
    <div class="max-w-md mx-auto my-4 p-4 rounded-md
              <%= key == 'notice' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
      <%= message %>
    </div>
  <% end %>
  <%= form_with model: current_user, url: profile_path, method: :patch, class: "space-y-6" do |f| %>
    <!-- 名前入力 -->
    <div>
      <%= f.label :name, "名前", class: "block text-sm font-semibold text-gray-800 mb-1" %>
      <%= f.text_field :name, class: "w-full border border-gray-300 rounded-md px-3 py-2 text-gray-800 focus:outline-none focus:ring-1 focus:ring-gray-800 focus:border-gray-800" %>
    </div>
    <!-- メールアドレス表示 -->
    <div>
      <label class="block text-sm font-semibold text-gray-800 mb-1">メールアドレス</label>
      <p class="text-gray-800 mb-1"><%= current_user.email %></p>
      <small class="text-gray-500">※メールアドレスの変更はGoogleで行ってください。</small>
    </div>
    <!-- 更新ボタン -->
    <div>
      <%= f.submit "変更を保存",
        class: "w-full py-2 rounded-md bg-gray-600 text-white hover:bg-gray-700 hover:text-white transition cursor-pointer" %>
    </div>
  <% end %>
</div>

<%= link_to "開催日を追加", new_event_day_url(@event.event_key),
        class: "inline-block mb-6 px-4 py-2 bg-gray-800 text-white rounded hover:bg-gray-900" %>
<% if @days.present? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 pb-[calc(5.25rem+env(safe-area-inset-bottom))]">
    <% @days.each do |day| %>
      <div class="flex items-center justify-between bg-white shadow-xs rounded-lg p-4 border">
        <%= day.date.strftime("%-Y/%-m/%-d") %>
        <%= button_to "削除",
              event_day_path(@event.event_key, day),
              method: :delete,
              data: { turbo_confirm: "⚠️ 削除しますか？ 一度削除すると元に戻せません" },
              class: "p-2 rounded-md bg-red-500 text-white transition cursor-pointer
                      hover:bg-red-600 hover:text-white" %>
      </div>
    <% end %>
  </div>
<% end %>
<%# 下部タブメニュー %>
<%= render "layouts/bottom_tab" %>